<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Authentication</servlet-name>
		<servlet-class>com.kervinramen.spotfinder.AuthenticationServlet</servlet-class>
	</servlet>
		<servlet-mapping>
		<servlet-name>Authentication</servlet-name>
		<url-pattern>/authenticate</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Question</servlet-name>
		<servlet-class>com.kervinramen.spotfinder.QuestionServlet</servlet-class>
	</servlet>
		<servlet-mapping>
		<servlet-name>Question</servlet-name>
		<url-pattern>/question</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Spotfinder</servlet-name>
		<servlet-class>com.kervinramen.spotfinder.SpotfinderServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Spotfinder</servlet-name>
		<url-pattern>/spotfinder</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
